# pnpm configuration
# Automatically install peer dependencies
auto-install-peers=true

# Use strict peer dependencies (recommended for production)
strict-peer-dependencies=false

# Shamefully hoist packages (helps with serverless compatibility)
shamefully-hoist=true

# Public hoist pattern for serverless plugins
public-hoist-pattern[]=*serverless*
public-hoist-pattern[]=@sparticuz/chromium
public-hoist-pattern[]=puppeteer-core
