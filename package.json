{
  "name": "webshot",
  "version": "1.0.0",
  "description": "WebShot - Cost-effective Screenshot-as-a-Service using serverless architecture. Pay only for what you use with headless Chrome on AWS Lambda. Capture webpages and HTML content with zero infrastructure costs when idle.",
  "main": "index.js",
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "start": "sls offline start",
    "lint": "prettier --write '**/*.js' --parser babel",
    "test": "serverless-bundle test",
    "deploy": "sls deploy",
    "deploy:prod": "sls deploy --stage production",
    "package": "sls package",
    "remove": "sls remove"
  },
  "keywords": [
    "node",
    "html",
    "browser",
    "headless chrome",
    "aws lamda",
    "serverless",
    "api-gateway",
    "browsershot",
    "screenshot"
  ],
  "author": "palPalani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/palpalani/webshot.git"
  },
  "devDependencies": {
    "@sparticuz/chromium": "^140.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0",
    "eslint-plugin-import": "^2.32",
    "eslint-plugin-jsx-a11y": "^6.10",
    "eslint-plugin-prettier": "^5.5",
    "prettier": "^3.6",
    "serverless": "^3.40.0",
    "serverless-bundle": "6.3.1",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.8.1"
  },
  "dependencies": {
    "puppeteer-core": "^24.25.0"
  }
}
